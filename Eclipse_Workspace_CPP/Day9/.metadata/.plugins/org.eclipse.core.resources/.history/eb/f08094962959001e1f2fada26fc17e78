#include<iostream>
using namespace std;

class Array{
private:
	int size;
	int *arr;
public:
	Array(){
		this->size = 0;
		this->arr = nullptr;
	}
	Array(int size){
		this->size = size;
		this->arr = new int(this->arr);
	}



	void acceptRecord(){
		cout<<"Number: ";
		for (int i = 0; i < this->size; ++i) {
			cin>>this->arr[i];
		}
	}
	void printRecord()
};
int main(){

	Array a1(3);
	Array a2(a1);
}

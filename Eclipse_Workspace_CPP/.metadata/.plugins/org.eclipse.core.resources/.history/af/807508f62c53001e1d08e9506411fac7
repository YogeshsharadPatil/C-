#include<cstdio>
int num1= 10; //global variable
int main(){
 int num1 = 20; // Local variable
 printf("Num :  %d\n",num1);
 printf("Num :  %d\n",::num1); // scope resolution operator to call global variable

 {
	 int num3=30;
	 printf("Num :  %d\n",num1);
	  printf("Num :  %d\n",::num1);
 }


}




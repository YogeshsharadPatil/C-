#include<iostream>
#include<cstdlib>
using namespace std;

int main( void ){
	//Memory allocation for single integer variable
	int *ptr = (int*)calloc( sizeof( int ), 1 );

	//Dereferencing
	*ptr = 123;
	cout<<"Value	:	"<< *ptr << endl;	//Dereferencing

	//Memory deallocation for single integer variable
	free( ptr );
	return 0;
}

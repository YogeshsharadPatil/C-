#include<iostream>
using namespace std;
class Employee{
private:
	char name[32];	//32 Bytes
	int empid;		//4 Bytes
	float salary;	//4 Bytes
public:
	void acceptRecord( ){
		cout << "Name	:	";
		cin >> name;
		cout << "Empid	:	";
		cin >> empid;
		cout << "Salary	:	";
		cin >> salary
	}
};
int main( void ){
	Employee emp;

	emp.acceptRecord( );

	emp.printRecord( );
	return 0;
}

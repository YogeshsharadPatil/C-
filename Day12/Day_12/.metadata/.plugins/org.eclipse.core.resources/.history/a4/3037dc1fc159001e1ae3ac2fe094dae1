#include<iostream>
#include<string>
using namespace std;

class Person{
private:
	string name;
	int age;
public:
	Person( void ){
		this->name = "";
		this->age = 0;
	}
	Person( string name, int age ){
		this->name = name;
		this->age = age;
	}
	void showRecord( void ){
		cout << "Name	:	" << this->name << endl;
		cout << "Age	:	" << this->age << endl;
	}
};
int main( void ){
	//Person p;
	Person p("Sandeep", 40);
	p.showRecord( );
	return 0;
}

class Employee{
private:
	string name;
	int age;
	int empid;
	float salary;
public:
	Employee( void ){
		this->name = "";
		this->age = 0;
		this->empid = 0;
		this->salary = 0;
	}
	void displayRecord( void ){
		cout << "Name	:	" << this->name << endl;
		cout << "Age	:	" << this->age << endl;
		cout << "Empid	:	" << this->empid << endl;
		cout << "Salary	:	" << this->salary << endl;
	}
};
int main( void ){
	//Employee emp;
	Employee emp("Sandeep", 40, 3778, 45000.50f);
	emp.displayRecord( );
	return 0;
}
